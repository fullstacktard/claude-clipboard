#!/bin/bash
# Clear all staged images without pasting

STAGING_DIR="${HOME}/.cache/claude-clipboard-staging"

if [ ! -d "$STAGING_DIR" ]; then
    echo "No staging area exists"
    exit 0
fi

COUNT=$(ls -1 "$STAGING_DIR"/staged_*.png 2>/dev/null | wc -l)

if [ $COUNT -eq 0 ]; then
    echo "No staged images to clear"
else
    rm -f "$STAGING_DIR"/staged_*.png
    echo "âœ“ Cleared $COUNT staged image(s)"
fi
